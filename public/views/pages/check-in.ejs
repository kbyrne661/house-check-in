<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>

<header>
    <%- include('../partials/header.ejs') %>
</header>

<main>
    <div class="container" style="margin-top: 2vh;">
        <a href="/" class="btn btn-outline-primary">&lt; Back</a>
    </div>
    <div class="index-container">
        <h1>Check In</h1>
    </div>
    <form class="container">
        <div class="form-group">
            <select class="form-control" id="brotherSelect">
                <option value="" disabled selected>Select a brother...</option>
                <option>Kevin Byrne</option>
            </select>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                <input type="text" class="form-control" placeholder="Guest first name">
                </div>
                <div class="col">
                <input type="text" class="form-control" placeholder="Guest last name">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
            <input type="checkbox" class="form-check-input" id="commonSpacesCheck">
            <label class="form-check-label" for="commonSpacesCheck">We will be in common spaces</label>
            </div>
        </div>
            <div class="form-group">
            <button type="submit" class="btn btn-success">Check In</button>
        </div>
      </form>
</main>

<footer>
    <%- include('../partials/footer.ejs') %>
</footer>

</body>
</html>